{
  "extends": ["config:base"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "minor": {
    "automerge": true
  },
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "schedule": ["every weekend"],
  "masterIssue": true,
  "labels": ["type: dependencies", "renovate"],
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "excludePackagePatterns": ["cypress", "prettier", "semantic-release"],
      "enabled": false
    }
  ]
}
